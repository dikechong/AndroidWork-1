        <Spinner
            android:id="@+id/spinner_discount"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:layout_marginTop="30dp"
            android:background="@drawable/droplist" />

        <EditText
            android:id="@+id/discount"
            android:ems="8"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:layout_marginTop="14px"
            android:background="@drawable/inputbox"
            android:gravity="center_vertical"
            android:paddingLeft="5px"
            android:textColor="#000000"
            android:text="折扣率 ：100%" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:text="应支付" />

            <TextView
                android:id="@+id/should_pay"
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:text="已支付" />

            <TextView
                android:id="@+id/already_pay"
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:text="未支付" />

            <TextView
                android:id="@+id/left_to_pay"
                android:layout_width="0dp"
                android:layout_height="36px"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

      
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="center"
                android:text="找零" />

            <TextView
                android:id="@+id/give_back"
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:visibility="invisible"
            android:background="@drawable/droplist" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:background="@drawable/droplist" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:text="收费金额" />

            <TextView
                android:id="@+id/get"
                android:layout_width="0dp"
                android:layout_height="45px"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="center_horizontal|bottom"
                android:text="0" />
        </LinearLayout>

        
       

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="36px"
            android:background="#33a9e7"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="确定" 
            
            />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:orientation="horizontal" >

            <TextView
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="36px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:text="已消费金额" />

            <TextView
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="36px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>