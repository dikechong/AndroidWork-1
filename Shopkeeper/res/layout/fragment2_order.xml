<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="15px"
    android:paddingRight="15px" >

   <LinearLayout
        android:id="@+id/ll_inventory"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="418px"
            android:layout_height="40px"
            android:layout_marginTop="15px"
            android:background="#f1f1f1"
            android:gravity="center"
            android:text="订单清单"
            android:textColor="#666" />

        
        <ScrollView 
            android:layout_width="418px"
            android:layout_height="match_parent"
            >
             
        <LinearLayout 
            android:id="@+id/linear_inventory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            ></LinearLayout>
            
        </ScrollView>
        
   
       
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15px"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edi_in_order"
            android:layout_width="328px"
            android:layout_height="40px"
            android:layout_marginTop="15px"
            android:background="@drawable/search"
            android:numeric="integer"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dishnum_in_order"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=""
                android:textColor="#000000"
                android:layout_marginLeft="2dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dishname_in_order"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="2dp"
                android:textSize="15sp" 
                android:ems="5"
                android:layout_height="20dp"
                android:text="" />

            <TextView
                android:id="@+id/price1_in_order"
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:textSize="15sp" 
                android:textColor="#000000"
  				android:ems="0"
                android:text="" />

            <TextView
                android:id="@+id/price2_in_order"
                android:layout_width="wrap_content"
                android:textSize="15sp" 
                android:layout_height="20dp"
                android:ems="2"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/sub_in_order"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/num_in_order"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:background="#FFFFFF"
                android:textSize="15sp" 
                android:textColor="#000000"/>

            <Button
                android:id="@+id/plus_in_order"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:background="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px" 
                android:id="@+id/tv_note1"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:id="@+id/tv_note2"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:id="@+id/tv_note3"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:src="@drawable/del" 
                android:id="@+id/iv_editNote"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:orientation="horizontal"
            android:paddingLeft="10px"
            android:paddingRight="10px" >

            <Button
                android:id="@+id/add_to_menu"
                android:layout_width="0dp"
                android:layout_height="40px"
                android:layout_weight="1"
                android:background="#33a9e7"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="添加" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40px"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="#33a9e7"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="贈送" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="35px"
            android:textColor="#8888"
            android:textSize="20sp"
            android:gravity="center"
            android:text="会员绑定" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapestyle"
            android:gravity="center"
            android:hint="请输入会员手机"
            android:textSize="18px" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="10px"
            android:background="@drawable/shapestyle"
            android:gravity="center"
            android:hint="请输入密码"
            android:textSize="18px" />

        <TextView
            android:layout_width="150px"
            android:layout_height="50px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15px"
            android:background="#33a9e7"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="提交" />
        
        <TextView
            android:id="@+id/sendbt"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90px"
            android:background="#33a9e7"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="提交"
            />
        

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46px"
            android:layout_marginTop="15px"
            android:gravity="center"
            android:text="蓝牙打印"
            android:textColor="#FFFFFF"
            android:background="#33a9e7"
 />

       
     
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_payment"
        android:layout_width="245px"
        android:layout_height="match_parent"
        
        android:layout_marginLeft="25px"
        android:orientation="vertical" >
        <ListView android:id="@+id/payment_listview"
            android:layout_marginTop="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
